@{
    ViewBag.Title = "Categorias de Animais";
}

<head>
    <link rel="stylesheet" href="~/Content/CSS/Home/animaisCategoria.css">
</head>

<h2>@ViewBag.Title</h2>

<div class="inserir_animal_categoria">

    <label for="nome_categoria">Categoria:</label>
    <input id="nome_categoria" type="text" name="nome_categoria" onkeyup="checarInputCategoria()">
    <button class="btn-save" disabled>Inserir</button>
</div>

<div id="lista-categorias">

    @foreach (var categoria in ViewBag.AnimaisCategoria)
    {
    <div class="animal_categoria">
        <div class="categoria_nome" data-ID="@categoria.AnimalCategoriaID">Categoria: @categoria.Nome </div>
        <input data-index="@categoria.AnimalCategoriaID" class="nome_categoria_atualizar" type="text" name="nome_categoria_atualizar">
        <button class="btn-update" data-ID="@categoria.AnimalCategoriaID">Atualizar</button>
        <button class="btn-delete" data-ID="@categoria.AnimalCategoriaID" data-toggle="modal" data-target="#deleteAnimaisCategoriasConfirmation">Deletar</button>
    </div>
    }

</div>

@*Modal para confirmar exclusão de Categorias de Animais*@
<div class="modal fade" id="deleteAnimaisCategoriasConfirmation" tabindex="-1" role="dialog" aria-labelledby="animaisCategoriasModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="animaisCategoriasModal">Confirmar Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja deletar essa categoria de animal?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="deletarCategoria()">Sim</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Não</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/Home/animaisCategoria.js"></script>
